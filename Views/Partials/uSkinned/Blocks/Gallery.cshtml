    async Task OutputMultipleImages(IEnumerable<IPublishedContent> images, string itemsClass, ImageSettings imageSettings, AnimationSettings animation, bool disableLightWindow, string uniqueId, string viewPath, bool includeChildFolders, IUsn_Cmp_CommonBlockSettings itemMinSettings, bool webPEnabled, bool enableRandomOrder, string opacityClass, string maxWidthClass, string maxWidthStyle, string anchor)
    {
        if (images != null && images.Any())
        {
            images = enableRandomOrder ? images.Randomize() : images;

            foreach (var item in images)
            {
                if (item.ContentType.Alias == "Image" || ((item.ContentType.Alias == "File" || item.ContentType.Alias == "umbracoMediaVectorGraphics") && item.Value<string>("umbracoExtension") == "svg"))
                {
                    string[] imageExtensions = { "png", "gif", "jpg", "jpeg", "svg", "webp" };

                    if (imageExtensions.Any(x => item.Value<string>("umbracoExtension") == x))
